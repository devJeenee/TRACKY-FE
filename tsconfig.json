{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "skipLibCheck": true,
    "baseUrl": ".", // 꼭 있어야 합니다!
    "paths": {
      "@/*": ["src/*"]
    }
  }
}